 */
package main.resources;

import java.io.IOException;

import org.opencv.core.Core;

/**
 * args[0] = path to folder with images for detecting
 * 
 * @author Metenev-VV
 * @version 0.1
 * @since 0.1
 */
public class ImageDetector {
	private final ImageDetector imageDetector;
	
	public ImageDetector (ImageDetector imageDetector) {
		this.imageDetector = imageDetector;
	}
	
	
	
	public static void main(String[] args) throws IOException {
		String imagePath = new String();
		
		if (args.length == 0) {
			Scanner in = new Scanner (System.in);
			System.out.print("Input path to image directory or file name: ");
			imagePath = in.nextLine();
			if (imagePath.isEmpty()) {
				System.err.println("Missing imagePath argument");
				System.exit(1);
			}
			
		}
		
		//Start
		Path imagesPath = (args.length == 0) ? Paths.get(imagePath) : Paths.get(args[0]); 
		
		System.out.println("Hello, OpenCV");
		System.out.printf("\nPath to image: %s ", imagesPath);

	    // Load the native library.
	    System.loadLibrary(Core.NATIVE_LIBRARY_NAME);
	    
	  }
	
	
	
	
}
